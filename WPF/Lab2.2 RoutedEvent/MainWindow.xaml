<Window x:Class="Lab2._2_RoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2._2_RoutedEvent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,209,0">
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="117,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Height="87"/>
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Height="125" Margin="350,44,0,0" VerticalAlignment="Top" Width="208">
            <Button x:Name="butAdd" Content="x+x" Height="37" RenderTransformOrigin="0.478,-2" Width="204">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="185"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="butMult" Content="x*x" Height="55"/>
        </StackPanel>

    </Grid>
</Window>
