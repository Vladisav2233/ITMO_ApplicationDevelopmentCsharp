<Window TextBoxBase.TextChanged="Grid_TextChanged"
        x:Class="Lab2._1_RoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2._1_RoutedEvent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid  TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Margin="117,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="73" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name="radBut1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="141,0,0,0" VerticalAlignment="Center"/>
        <RadioButton x:Name="radBut2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="141,264,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="141,332,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
